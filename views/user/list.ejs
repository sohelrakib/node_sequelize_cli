<!DOCTYPE html>
<html lang="en">

<head>
    <title>Document</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <div class="container mt-3">
        <h2 class="text-center p-4">All user list</h2>

        <table class="table">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Address</th>
                </tr>
            </thead>
            <tbody>
                <% if (users.length) { %>
                    <% for ( let user of users ) { %>
                        <tr>
                            <td>
                                <%= user.firstName %>
                            </td>
                            <td>
                                <%= user.lastName %>
                            </td>
                            <td>
                                <%= user.email %>
                            </td>
                            <td>
                                <%= user.phone %>
                            </td>
                            <td>
                                <% user.Addresses.forEach(address => { %>
                                  <%= address.city %>, <%= address.area %>, <%= address.house_no %>, <%= address.road_no %><br>
                                <% }) %>
                            </td>
                        </tr>
                    <% } %>
                <% } else { %>
                        <tr>
                            <td>No User Found</td>
                        </tr>
                <% } %>

            </tbody>
        </table>
    </div>
</body>
</html>